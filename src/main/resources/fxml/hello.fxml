<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import org.tbee.javafx.scene.layout.fxml.MigPane?>

<MigPane id="rootPane" fx:controller="com.javafx.HelloController"
        styleClass="main-panel" 
        layout="insets 20"
        cols="[label, pref!][grow, 50::]"
        rows=""
        xmlns:fx="http://javafx.com/fxml">

    <Label text="Id:" />        <TextField fx:id="idField"       prefColumnCount="30"       MigPane.cc="growx, wrap" />
    <Label text="Nombre:" />	<TextField fx:id="nameField"     prefColumnCount="30"       MigPane.cc="growx, wrap" />
    <Label text="Apellido:" />  <TextField fx:id="lastNameField" prefColumnCount="30"       MigPane.cc="growx, wrap" />

    <Button text="Guardar Cliente" onAction="#sayHello" MigPane.cc="skip, gap :push, gaptop 15, wrap" />

    <Label fx:id="messageLabel" styleClass="hello-message" MigPane.cc="span, growx, gaptop 15" />

</MigPane >